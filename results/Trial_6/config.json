{
  "architecture": {
    "layer1": {
      "units": 16,
      "activation": "relu"
    },
    "layer2": {
      "units": 8,
      "activation": "relu"
    },
    "output": {
      "units": 1,
      "activation": "sigmoid"
    }
  },
  "compilation": {
    "optimizer": "Adam",
    "learning_rate": 0.001,
    "loss": "binary_crossentropy",
    "metrics": [
      "accuracy"
    ]
  },
  "training": {
    "epochs": 150,
    "batch_size": 16,
    "validation_split": 0.2,
    "class_weight": "balanced",
    "callbacks": {
      "early_stopping": {
        "monitor": "val_loss",
        "patience": 10,
        "restore_best_weights": true
      },
      "reduce_lr": {
        "monitor": "val_loss",
        "factor": 0.2,
        "patience": 5,
        "min_lr": 0.0001
      }
    }
  }
}